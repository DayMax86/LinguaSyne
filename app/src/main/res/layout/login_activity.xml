<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_teal"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/email_login_textbox"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corners_textbox_bg"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:gravity="center_horizontal"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColor="@color/text_blue"
        android:textStyle="normal"
        android:textColorHint="@color/hint_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_login_textbox"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners_textbox_bg"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/text_blue"
        android:textStyle="normal"
        android:textColorHint="@color/hint_blue"
        app:layout_constraintEnd_toEndOf="@+id/email_login_textbox"
        app:layout_constraintStart_toStartOf="@+id/email_login_textbox"
        app:layout_constraintTop_toBottomOf="@+id/email_login_textbox" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners_button_bg"
        android:fontFamily="@font/cabin"
        android:text="Log in"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/password_login_textbox"
        app:layout_constraintStart_toStartOf="@+id/password_login_textbox"
        app:layout_constraintTop_toBottomOf="@+id/password_login_textbox" />

    <TextView
        android:id="@+id/create_account_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="New user? Create an account"
        android:textColor="@color/text_blue"
        app:layout_constraintEnd_toEndOf="@+id/password_login_textbox"
        app:layout_constraintStart_toStartOf="@+id/password_login_textbox"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />
</androidx.constraintlayout.widget.ConstraintLayout>


